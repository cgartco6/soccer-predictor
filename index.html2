<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Horse Racing Predictor System</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background: linear-gradient(135deg, #0a1929 0%, #1a1a2e 100%);
            color: #e0e0e0;
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1400px;
            margin: 0 auto;
        }
        
        .header {
            text-align: center;
            padding: 30px 0;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }
        
        .header h1 {
            color: #00d4ff;
            font-size: 2.8rem;
            margin-bottom: 10px;
            text-shadow: 0 2px 10px rgba(0, 212, 255, 0.3);
        }
        
        .header p {
            color: #a0a0a0;
            font-size: 1.1rem;
        }
        
        .dashboard {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }
        
        .panel {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .panel.full-width {
            grid-column: 1 / -1;
        }
        
        .panel h2 {
            color: #00d4ff;
            margin-bottom: 20px;
            font-size: 1.5rem;
            border-bottom: 2px solid rgba(0, 212, 255, 0.3);
            padding-bottom: 10px;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
        }
        
        .stat-card {
            background: rgba(0, 212, 255, 0.1);
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            border: 1px solid rgba(0, 212, 255, 0.2);
        }
        
        .stat-value {
            font-size: 2rem;
            font-weight: bold;
            color: #00d4ff;
            margin-bottom: 5px;
        }
        
        .stat-label {
            color: #a0a0a0;
            font-size: 0.9rem;
        }
        
        .controls {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }
        
        .btn {
            background: linear-gradient(45deg, #0066cc, #00d4ff);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: bold;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 212, 255, 0.2);
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 212, 255, 0.4);
        }
        
        .btn.secondary {
            background: linear-gradient(45deg, #444, #666);
        }
        
        .btn.success {
            background: linear-gradient(45deg, #00cc66, #00ff88);
        }
        
        .btn.warning {
            background: linear-gradient(45deg, #ff9900, #ffcc00);
        }
        
        .race-info {
            background: rgba(0, 100, 200, 0.1);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            border-left: 4px solid #00d4ff;
        }
        
        .horses-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        
        .horses-table th {
            background: rgba(0, 212, 255, 0.2);
            color: #00d4ff;
            padding: 15px;
            text-align: left;
            font-weight: bold;
        }
        
        .horses-table td {
            padding: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .horses-table tr:hover {
            background: rgba(0, 212, 255, 0.05);
        }
        
        .value-bet {
            background: rgba(0, 255, 100, 0.1) !important;
            border-left: 3px solid #00ff88;
        }
        
        .top-pick {
            background: rgba(0, 212, 255, 0.15) !important;
            font-weight: bold;
        }
        
        .confidence-high {
            color: #00ff88;
            font-weight: bold;
        }
        
        .confidence-medium {
            color: #ffcc00;
        }
        
        .confidence-low {
            color: #ff6666;
        }
        
        .probability-bar {
            background: rgba(255, 255, 255, 0.1);
            height: 10px;
            border-radius: 5px;
            margin-top: 5px;
            overflow: hidden;
        }
        
        .probability-fill {
            height: 100%;
            background: linear-gradient(90deg, #ff0000, #ff9900, #00ff00);
            border-radius: 5px;
        }
        
        .betting-simulator {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .simulator-card {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            padding: 20px;
            text-align: center;
        }
        
        .simulation-result {
            margin-top: 15px;
            padding: 15px;
            background: rgba(0, 212, 255, 0.1);
            border-radius: 8px;
            border: 1px solid rgba(0, 212, 255, 0.3);
        }
        
        .loader {
            display: none;
            text-align: center;
            padding: 20px;
        }
        
        .spinner {
            border: 4px solid rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            border-top: 4px solid #00d4ff;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 15px;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .message {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: none;
        }
        
        .message.success {
            background: rgba(0, 255, 100, 0.1);
            border: 1px solid #00ff88;
            color: #00ff88;
        }
        
        .message.error {
            background: rgba(255, 50, 50, 0.1);
            border: 1px solid #ff6666;
            color: #ff6666;
        }
        
        @media (max-width: 1200px) {
            .dashboard {
                grid-template-columns: 1fr;
            }
        }
        
        .risk-warning {
            background: rgba(255, 100, 100, 0.1);
            border: 1px solid #ff6666;
            border-radius: 10px;
            padding: 20px;
            margin-top: 30px;
            color: #ff9999;
        }
        
        .feature-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 10px;
            margin-top: 15px;
        }
        
        .feature-item {
            background: rgba(255, 255, 255, 0.05);
            padding: 10px;
            border-radius: 5px;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üèá AI Horse Racing Predictor</h1>
            <p>Advanced Machine Learning System for Race Analysis & Predictions</p>
        </div>
        
        <div class="message" id="message"></div>
        
        <div class="dashboard">
            <div class="panel">
                <h2>ü§ñ AI System Status</h2>
                <div class="controls">
                    <button class="btn" onclick="initializeAI()">Initialize AI System</button>
                    <button class="btn secondary" onclick="generateNewRace()">Generate New Race</button>
                    <button class="btn success" onclick="getSystemStats()">Refresh Stats</button>
                </div>
                
                <div class="stats-grid" id="systemStats">
                    <div class="stat-card">
                        <div class="stat-value">--</div>
                        <div class="stat-label">Model Accuracy</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">--</div>
                        <div class="stat-label">Data Samples</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">--</div>
                        <div class="stat-label">Total Races</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">--</div>
                        <div class="stat-label">Avg Win Rate</div>
                    </div>
                </div>
                
                <div class="loader" id="loader1">
                    <div class="spinner"></div>
                    <p>Training AI model...</p>
                </div>
            </div>
            
            <div class="panel">
                <h2>üéØ Current Race</h2>
                <div class="race-info" id="currentRaceInfo">
                    <p>No race data loaded. Generate a new race to begin.</p>
                </div>
                
                <div class="controls">
                    <button class="btn warning" onclick="simulateBet('top_pick')">Bet on Top Pick</button>
                    <button class="btn success" onclick="simulateBet('value_bets')">Bet on Value Picks</button>
                    <button class="btn secondary" onclick="simulateBet('random')">Random Bet</button>
                </div>
                
                <div class="betting-simulator">
                    <div class="simulator-card">
                        <h3>Bankroll: $<span id="bankroll">1000</span></h3>
                        <input type="range" min="10" max="500" value="100" class="btn" id="betAmount" 
                               onchange="document.getElementById('betAmountValue').textContent = this.value">
                        <p>Bet Amount: $<span id="betAmountValue">100</span></p>
                    </div>
                    
                    <div class="simulator-card">
                        <div id="betResult">
                            <p>Run a simulation to see results</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="panel full-width">
                <h2>üèá Race Predictions</h2>
                <div class="controls">
                    <button class="btn" onclick="sortBy('rank')">Sort by Rank</button>
                    <button class="btn secondary" onclick="sortBy('value_rating')">Sort by Value</button>
                    <button class="btn secondary" onclick="sortBy('odds')">Sort by Odds</button>
                </div>
                
                <table class="horses-table" id="predictionsTable">
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>Horse</th>
                            <th>Odds</th>
                            <th>Win Probability</th>
                            <th>Value Rating</th>
                            <th>Recommendation</th>
                            <th>Confidence</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="predictionsBody">
                        <tr>
                            <td colspan="8" style="text-align: center; padding: 40px;">
                                No predictions available. Generate a race to see AI predictions.
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <div class="panel">
                <h2>‚öôÔ∏è System Features</h2>
                <div class="feature-list">
                    <div class="feature-item">Random Forest AI Model</div>
                    <div class="feature-item">Gradient Boosting Ensemble</div>
                    <div class="feature-item">Value Bet Detection</div>
                    <div class="feature-item">Probability Analysis</div>
                    <div class="feature-item">Real-time Simulations</div>
                    <div class="feature-item">Risk Assessment</div>
                    <div class="feature-item">Bankroll Management</div>
                    <div class="feature-item">Performance Tracking</div>
                </div>
                
                <div class="risk-warning">
                    <h3>‚ö†Ô∏è Important Notice</h3>
                    <p>This AI system is for educational and informational purposes only. Horse racing involves significant risk, and there are no guaranteed outcomes. Always bet responsibly and within your means.</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentPredictions = [];
        let currentRaceInfo = null;
        let bankroll = 1000;
        
        function showMessage(text, type = 'success') {
            const messageDiv = document.getElementById('message');
            messageDiv.textContent = text;
            messageDiv.className = `message ${type}`;
            messageDiv.style.display = 'block';
            
            setTimeout(() => {
                messageDiv.style.display = 'none';
            }, 5000);
        }
        
        function showLoader(id) {
            document.getElementById(id).style.display = 'block';
        }
        
        function hideLoader(id) {
            document.getElementById(id).style.display = 'none';
        }
        
        async function initializeAI() {
            showLoader('loader1');
            
            try {
                const response = await fetch('/api/init');
                const data = await response.json();
                
                if (data.status === 'success') {
                    showMessage(data.message, 'success');
                    await getSystemStats();
                    await generateNewRace();
                } else {
                    showMessage(data.message, 'error');
                }
            } catch (error) {
                showMessage('Error connecting to server: ' + error.message, 'error');
            } finally {
                hideLoader('loader1');
            }
        }
        
        async function generateNewRace() {
            showLoader('loader1');
            
            try {
                const response = await fetch('/api/generate_race');
                const data = await response.json();
                
                if (data.status === 'success') {
                    currentPredictions = data.predictions;
                    currentRaceInfo = data.race_info;
                    
                    // Update race info
                    const raceInfoDiv = document.getElementById('currentRaceInfo');
                    raceInfoDiv.innerHTML = `
                        <h3>${currentRaceInfo.track} - ${currentRaceInfo.race_time}</h3>
                        <p>Distance: ${currentRaceInfo.distance} furlongs | Condition: ${currentRaceInfo.track_condition}</p>
                        <p>Class: ${currentRaceInfo.race_class} | Purse: ${currentRaceInfo.purse}</p>
                        <p>Horses: ${data.horses.length} | Top Pick: ${data.top_pick?.horse_name || 'N/A'}</p>
                    `;
                    
                    // Update predictions table
                    updatePredictionsTable(data.horses);
                    
                    showMessage('New race generated successfully!', 'success');
                } else {
                    showMessage(data.message, 'error');
                }
            } catch (error) {
                showMessage('Error generating race: ' + error.message, 'error');
            } finally {
                hideLoader('loader1');
            }
        }
        
        function updatePredictionsTable(horses) {
            const tbody = document.getElementById('predictionsBody');
            tbody.innerHTML = '';
            
            horses.forEach((horse, index) => {
                const row = document.createElement('tr');
                
                // Add special classes
                if (index === 0) row.classList.add('top-pick');
                if (horse.is_value_bet) row.classList.add('value-bet');
                
                // Probability bar width
                const probWidth = Math.min(horse.predicted_win_probability * 100, 100);
                
                row.innerHTML = `
                    <td>${horse.rank}</td>
                    <td><strong>${horse.horse_name}</strong><br>
                        <small>Age: ${horse.age} | Weight: ${horse.weight}lbs</small></td>
                    <td>${horse.odds}/1</td>
                    <td>
                        ${(horse.predicted_win_probability * 100).toFixed(1)}%
                        <div class="probability-bar">
                            <div class="probability-fill" style="width: ${probWidth}%"></div>
                        </div>
                    </td>
                    <td>${horse.value_rating.toFixed(2)} ${horse.is_value_bet ? '‚≠ê' : ''}</td>
                    <td><span style="color: ${horse.recommended_bet === 'WIN' ? '#00ff88' : 
                        horse.recommended_bet === 'PLACE' ? '#ffcc00' : '#ff6666'}">
                        ${horse.recommended_bet}
                    </span></td>
                    <td class="confidence-${horse.confidence_score.toLowerCase()}">
                        ${horse.confidence_score}
                    </td>
                    <td>
                        <button class="btn" style="padding: 5px 10px; font-size: 0.8rem;" 
                                onclick="placeBet('${horse.horse_name}', ${horse.odds}, ${horse.predicted_win_probability})">
                            Bet $50
                        </button>
                    </td>
                `;
                
                tbody.appendChild(row);
            });
        }
        
        function sortBy(criteria) {
            if (!currentPredictions.length) return;
            
            let sortedHorses;
            if (criteria === 'value_rating') {
                sortedHorses = [...currentPredictions].sort((a, b) => b.value_rating - a.value_rating);
            } else if (criteria === 'odds') {
                sortedHorses = [...currentPredictions].sort((a, b) => a.odds - b.odds);
            } else {
                sortedHorses = [...currentPredictions].sort((a, b) => a.rank - b.rank);
            }
            
            updatePredictionsTable(sortedHorses);
        }
        
        async function simulateBet(strategy) {
            const betAmount = parseInt(document.getElementById('betAmount').value);
            
            try {
                const response = await fetch('/api/simulate_bet', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        bankroll: bankroll,
                        bet_amount: betAmount,
                        strategy: strategy
                    })
                });
                
                const data = await response.json();
                
                if (data.status === 'success') {
                    const sim = data.bet_simulation;
                    const resultDiv = document.getElementById('betResult');
                    
                    resultDiv.innerHTML = `
                        <div class="simulation-result">
                            <h3>${sim.strategy.replace('_', ' ').toUpperCase()}</h3>
                            <p><strong>Horse:</strong> ${sim.selected_horse}</p>
                            <p><strong>Odds:</strong> ${sim.odds}/1</p>
                            <p><strong>Bet:</strong> $${sim.bet_amount}</p>
                            <p><strong>Potential Win:</strong> $${sim.potential_payout.toFixed(2)}</p>
                            <p><strong>Expected Value:</strong> $${sim.expected_value}</p>
                            <p><em>Win probability: ${(sim.win_probability * 100).toFixed(1)}%</em></p>
                        </div>
                    `;
                }
            } catch (error) {
                showMessage('Error simulating bet: ' + error.message, 'error');
            }
        }
        
        function placeBet(horseName, odds, probability) {
            const betAmount = 50;
            const winChance = Math.random() < probability;
            
            if (winChance) {
                const winnings = betAmount * odds;
                bankroll += winnings - betAmount;
                showMessage(`üéâ ${horseName} WON! You won $${winnings.toFixed(2)}!`, 'success');
            } else {
                bankroll -= betAmount;
                showMessage(`üò¢ ${horseName} lost. You lost $${betAmount}.`, 'error');
            }
            
            document.getElementById('bankroll').textContent = bankroll.toFixed(2);
            
            // Update bet simulation if open
            simulateBet('top_pick');
        }
        
        async function getSystemStats() {
            try {
                const response = await fetch('/api/stats');
                const data = await response.json();
                
                if (data.status === 'success') {
                    const stats = data.stats;
                    const statsGrid = document.getElementById('systemStats');
                    
                    statsGrid.innerHTML = `
                        <div class="stat-card">
                            <div class="stat-value">${(stats.model_accuracy * 100).toFixed(1)}%</div>
                            <div class="stat-label">Model Accuracy</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">${stats.total_horses || '--'}</div>
                            <div class="stat-label">Data Samples</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">${stats.total_races || '--'}</div>
                            <div class="stat-label">Total Races</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">${stats.win_rate ? (stats.win_rate * 100).toFixed(1) + '%' : '--'}</div>
                            <div class="stat-label">Avg Win Rate</div>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Error fetching stats:', error);
            }
        }
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', () => {
            getSystemStats();
            
            // Show welcome message
            setTimeout(() => {
                showMessage('Welcome to AI Horse Racing Predictor! Click "Initialize AI System" to begin.', 'success');
            }, 1000);
        });
    </script>
</body>
</html>
